{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "components/*" : ["components/*"],
      "styles/*": ["styles/*"],
      "models/*": ["models/*"],
      "redux/*": ["redux/*"],
      "utils/*": ["utils/*"],
      "firestore/*": ["firebase/firestore/*"],
    },
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
, "firebase/initFirebase.ts"  ],
  "exclude": [
    "node_modules"
  ]
}
